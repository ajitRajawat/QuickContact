<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:background="@drawable/call_log_ripple"
    android:paddingTop="10dp">

    <CheckBox
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/contact_favourite"
        android:button="@drawable/contact_favourite_status"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:id="@+id/contact_profile"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:src="@drawable/default_profile_picture"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/contact_name"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/contactText"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1234567890"
            android:visibility="gone"
            android:id="@+id/contact_number"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/contactText"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

</LinearLayout>