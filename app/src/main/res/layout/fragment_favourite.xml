<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ajflims.quickcontact.Fragments.FavouriteFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favourite_recyclerview">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:id="@+id/home_Add"
        android:layout_marginBottom="30dp"
        app:fabSize="normal"
        app:rippleColor="@color/buttonColor"
        android:src="@drawable/home_add"
        android:backgroundTint="@color/homeinput"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
