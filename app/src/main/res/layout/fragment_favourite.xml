<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ajflims.quickcontact.Fragments.FavouriteFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favourite_recyclerview">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_fovourite_yet"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/favourite_empty_text"
        android:textSize="25sp"
        android:textColor="@color/contactText"/>



</RelativeLayout>
